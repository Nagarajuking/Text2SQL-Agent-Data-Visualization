# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_api_key_here

# Model Configuration
# Valid options: gemini-1.5-pro, gemini-1.5-flash, gemini-pro, gemini-flash
ROUTER_MODEL=gemini-1.5-flash
SQL_GENERATOR_MODEL=gemini-1.5-pro
REFLECTOR_MODEL=gemini-1.5-flash

# LangSmith Configuration (Optional - for observability and tracing)
# Get your API key from: https://smith.langchain.com/settings
# Leave empty to disable LangSmith tracing
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Application Settings
MAX_RETRY_COUNT=3
MAX_RESULT_ROWS=50
TEMPERATURE=0.1

# Database Configuration
DATABASE_PATH=chinook.db

# Optional: Use open-source models instead of Gemini
USE_OPEN_SOURCE=False

# Hugging Face Configuration (Required if USE_OPEN_SOURCE=True)
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your_hf_token_here
HUGGINGFACE_MODEL_REPO=defog/sqlcoder-7b-2
